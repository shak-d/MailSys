<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.NewMailController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="btnSend" layoutX="574.0" layoutY="356.0" mnemonicParsing="false" onAction="#onSend" prefHeight="30.0" prefWidth="51.0" text="Send">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label layoutX="14.0" layoutY="14.0" text="To:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="areaTo" layoutX="40.0" layoutY="11.0" prefHeight="26.0" prefWidth="538.0" promptText="JohnDoe@mail.com, JaneDoe@mail.com" />
            <Label layoutX="14.0" layoutY="48.0" text="Subject: ">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="btnHelp" layoutX="585.0" layoutY="11.0" mnemonicParsing="false" onAction="#onHelp" text="Help" />
            <TextField fx:id="areaSubject" layoutX="67.0" layoutY="46.0" prefHeight="26.0" prefWidth="558.0" promptText="No subject" />
            <TextArea fx:id="areaMessage" layoutX="14.0" layoutY="81.0" prefHeight="264.0" prefWidth="610.0" />
            <Label layoutX="19.0" layoutY="363.0" textFill="RED" />
         </children>
    </AnchorPane>
  </children>
</VBox>
